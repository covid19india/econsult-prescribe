<!DOCTYPE html>
<html>
    <head>
        <style>
            .info {
                color: #555555;
                text-align: center;
            }

            .info span {
                color: #111111;
            }

            .patient {
                float:left;
                text-align: left;
            }

            .metadata {
                float:right;
                text-align: right;
            }

            .medicines {
                color: #555555;
            }

            .medicines span {
                color: #111111;
            }
            
            .clear { clear:both; }

            img {
                position: absolute;
                margin-left: 2.5%;
                height: 30pt;
                width: 30pt;
            }
            p {
              margin: 2pt;
            }

            hr {
                color: #555555;
            }

            body {
              font-family: Sans-Serif;
            }
        </style>
    </head>
    <body>
        <div>
            <img src="data:image/png;base64," alt="eConsult logo" />
        </div>
        <div style="width: 95%; height: 100%; margin: 0 2.5%;">
            <div style="font-size: 7pt">	
                <% if (details) { %>
                    <div class="info"> 
			         <p><span><%= details.doctor.name %></span></p>
			         <p><%= details.doctor.designation %></p>
			         <p><%= details.doctor.specialization %></p>
			         <p>Medical Registration Number: <%= details.doctor.registration_number %></p>
                     <p><%= details.doctor.location %></p>
                     <p><%= details.doctor.email %></p>
                    </div>
                    <hr>
                    
                    <div class="info patient">
                        <p><span><%= details.patient.name %></span></p>
                        <p><%= details.patient.age %>, <%= details.patient.gender %>, located in <%= details.patient.location %>.</p>
                        <p><%= details.patient.email %></p>
                    </div>

                    <div class="info metadata">
                        <p>Prescription Id: <%= details.prescription.id %></p>
                        <p><%= details.prescription.issued_on %></p>
                    </div>
                    <div class="clear"></div>
                    <br>
                    <div class="info" style="text-align: left">
                        <p><span>Presenting complaints:</span> <%= details.prescription.symptoms %></p>
                        <p><span>Provisional diagnosis:</span> <%= details.prescription.diagnosis %></p>
                    </div>

                    <div class="medicines">
                        <h1 style="color:#000000"> &#8478; </h1>
                        <h2> <span> Medicines </span></h2>
                        
                        <% if (details.prescription.medicines.length > 0) { %>
                            <% details.prescription.medicines.forEach(medicine => {%>
                            <div>
                                <p><span><%= medicine.name %></span></p>
                                <div style="float:left"><p><%= medicine.frequency %> time(s) a day x <%= medicine.duration %> days</p></div>
                                <div style="float:right"><p><%= medicine.usage %></p></div>
                                <div class="clear"></div>
                                <br>
                            <%  });%>
                            </div>
                        <% }%>
                    </div>

                    <hr>
                    <div class="info" style="text-align: left">
                        <p><span>Additional remarks:</span> <%= details.prescription.additional_remarks %></p>
                        <br>
                        <p><span>Follow-up advice:</span> <%= details.prescription.follow_up_advice %></p>
                    </div>

                    <div class="info" style="float:right;margin-top:10%">
                        <p> Doctor's Signature<br>
                        <%= details.prescription.issued_on %></p>
                    </div>
                    <div class="clear"></div>

                <% } %>
            </div>
        </div>
    </body>
</html>
